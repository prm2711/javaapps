package com.zilker.servlets;

import java.io.IOException;
import java.util.ArrayList;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.zilker.dao.FindPlayerMatches;
import com.zilker.dto.Match;

/**
 * Servlet implementation class TwoPlayerMatchServlet
 */
@WebServlet("/TwoPlayerMatchServlet")
public class TwoPlayerMatchServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public TwoPlayerMatchServlet() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		RequestDispatcher rd;
		String player1id = request.getParameter("player1id");
		int player1 = Integer.parseInt(player1id);
		String player2id = request.getParameter("player2id");
		int player2 = Integer.parseInt(player2id);
		FindPlayerMatches findPlayer = new FindPlayerMatches();
		ArrayList<Match> matches=new ArrayList<Match>();
		matches=findPlayer.retrieveResult(player1, player2);
		rd = request.getRequestDispatcher("matchestwoplayer.jsp");
		request.setAttribute("list",matches);
		rd.forward(request, response);
	}

}
